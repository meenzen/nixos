{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "docker:enableMajor"
  ],
  "nix": {
    "enabled": true
  },
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": [
      "at any time"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/\\.nix$/"
      ],
      "matchStrings": [
        "image = \\\"(?<depName>.*?)(?::(?<currentValue>.*?))?@?(?<currentDigest>sha256:[a-f0-9]+)?\\\";\\n"
      ],
      "datasourceTemplate": "docker"
    }
  ]
}
